{
  "name": "grafos",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build:create-graph": "bun build --compile --outfile=out/create-graph.exe ./src/create-graph.ts",
    "build:csv-to-dot": "bun build --compile --outfile=out/csv-to-dot.exe ./src/csv-to-dot.ts",
    "build:copy-instructions": "copy EXE-INSTRUCTIONS.txt out\\README.txt",
    "build": "bun build:create-graph && bun build:csv-to-dot && bun build:copy-instructions"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
